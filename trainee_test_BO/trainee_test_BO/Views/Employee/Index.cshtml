@model ICollection<Domain.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/sorttable.js"></script>
<h1>Index</h1>

<div>
    <h4>Upload CSV</h4>
    <form asp-controller="Employee" asp-action="Upload" method="post"
          enctype="multipart/form-data">

        <input type="file" name="file" accept=".csv" required class="btn-outline-success" />
        <button type="submit" class="btn-info">Upload File</button>
    </form>
    <hr />

    <table class="sortable" style="width:100%">
        <tr class="row">
            <th class="col-sm-2">

                @Html.DisplayName("Name")
            </th>
            <th class="col-sm-2">
                @Html.DisplayName("Birthday")
            </th>
            <th class="col-sm-2">
                @Html.DisplayName("Phone")
            </th>
            <th class="col-sm-2">
                @Html.DisplayName("Salary")
            </th>
            <th class="col-sm-2">
                @Html.DisplayName("isMarried")
            </th>
        </tr>

        @foreach (var employee in Model)
        {
            <tr class="row">
                
                <td class="col-sm-2">
                    @Html.ActionLink(employee.Name, "Details", "Employee", new { id = employee.Id })
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(model => employee.Birthday)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(model => employee.Phone)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(model => employee.Salary)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(model => employee.Married)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.Id })|
                    @Html.ActionLink("Delete", "Delete", new { id = employee.Id })
                </td>
            </tr>
        }
    </table>
</div>
